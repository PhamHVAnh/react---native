# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=your_database_name

# Server Configuration
PORT=3000

# Expo Configuration
# Port của Expo development server (mặc định: 8081)
# Chỉ cần thay đổi nếu bạn sử dụng port khác
EXPO_PORT=8081

# Cerebras AI Configuration
# Get your API key from: https://cloud.cerebras.ai/
# Free tier available with generous limits
CEREBRAS_API_KEY=your-cerebras-api-key-here

# JWT Secret (for authentication)
JWT_SECRET=your-jwt-secret-here

# MoMo Payment Configuration
# Get your credentials from: https://business.momo.vn/
MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
# Deep link callback - MoMo will redirect to this URL after payment
# For production, update to your production deep link scheme
MOMO_REDIRECT_URL=http://localhost:3000/api/payment/momo/callback
MOMO_IPN_URL=http://localhost:3000/api/payment/momo/ipn

